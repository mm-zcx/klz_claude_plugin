/* Military Camouflage Theme - Qt UI 优化军工主题 */
/* 适用于军工、安防、监控类应用的多色彩迷彩主题 */

/* 全局基础设置 */
QWidget {
    font-family: "Consolas", "Monaco", "Microsoft YaHei", Arial, sans-serif;
    font-size: 14px;
    color: #E0E0E0;
    background-color: #1A1A1A;
    outline: 0px;
}

/* 主窗口 */
QMainWindow {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:1,
                stop:0 #1A1A1A, stop:0.5 #2C2C2C, stop:1 #1A1A1A);
}

/* 军工风格按钮 */
QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #4A5F4A, stop:1 #3D4A3D);
    border: 2px solid #8B7355;
    border-radius: 4px;
    color: #E0E0E0;
    padding: 10px 18px;
    font-weight: 600;
    font-size: 13px;
    min-width: 90px;
    min-height: 36px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

QPushButton:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #5A6F5A, stop:1 #4A5F4A);
    border-color: #C3B091;
    box-shadow: 0 0 8px rgba(195, 176, 145, 0.3);
    text-shadow: 0 0 4px rgba(195, 176, 145, 0.5);
}

QPushButton:pressed {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #3D4A3D, stop:1 #2A352A);
    border-color: #FF6B35;
    box-shadow: inset 0 0 6px rgba(255, 107, 53, 0.4);
}

QPushButton:disabled {
    background-color: #2A2A2A;
    border-color: #555555;
    color: #666666;
    box-shadow: none;
}

/* 战术行动按钮（ Tactical Orange 强调色） */
QPushButton[class="tactical"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #FF6B35, stop:1 #E55A2B);
    border: 2px solid #FF7F50;
    color: #FFFFFF;
    font-weight: 700;
    text-shadow: 0 1px 2px rgba(0,0,0,0.7);
}

QPushButton[class="tactical"]:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #FF7F50, stop:1 #FF6B35);
    box-shadow: 0 0 12px rgba(255, 107, 53, 0.6);
    border-color: #FFA07A;
}

/* HUD风格按钮 */
QPushButton[class="hud"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(46, 204, 113, 0.8), stop:1 rgba(39, 174, 96, 0.8));
    border: 1px solid #2ECC71;
    color: #FFFFFF;
    border-radius: 8px;
    font-family: "Consolas", monospace;
}

QPushButton[class="hud"]:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(46, 204, 113, 0.9), stop:1 rgba(39, 174, 96, 0.9));
    border-color: #27AE60;
    box-shadow: 0 0 10px rgba(46, 204, 113, 0.8);
}

/* 输入框 - HUD风格 */
QLineEdit, QTextEdit, QPlainTextEdit {
    border: 2px solid #8B7355;
    border-radius: 4px;
    padding: 10px 14px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(26, 26, 26, 0.9), stop:1 rgba(44, 44, 44, 0.9));
    selection-background-color: #4A5F4A;
    color: #E0E0E0;
    font-family: "Consolas", monospace;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border-color: #2ECC71;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(26, 26, 26, 0.95), stop:1 rgba(44, 44, 44, 0.95));
    box-shadow: 0 0 6px rgba(46, 204, 113, 0.4);
}

QLineEdit:disabled, QTextEdit:disabled, QPlainTextEdit:disabled {
    background-color: rgba(42, 42, 42, 0.5);
    border-color: #555555;
    color: #888888;
}

/* 下拉框 */
QComboBox {
    border: 2px solid #8B7355;
    border-radius: 4px;
    padding: 10px 14px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(26, 26, 26, 0.9), stop:1 rgba(44, 44, 44, 0.9));
    color: #E0E0E0;
    min-width: 100px;
    font-family: "Consolas", monospace;
}

QComboBox:hover {
    border-color: #C3B091;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(44, 44, 44, 0.9), stop:1 rgba(58, 58, 58, 0.9));
}

QComboBox:focus {
    border-color: #2ECC71;
}

QComboBox::drop-down {
    border: none;
    width: 30px;
    background: transparent;
}

QComboBox::down-arrow {
    image: url(:/assets/icons/modern/arrow-down-tactical.png);
    width: 14px;
    height: 14px;
}

QComboBox QAbstractItemView {
    border: 2px solid #8B7355;
    background-color: rgba(26, 26, 26, 0.95);
    selection-background-color: #4A5F4A;
    selection-color: #E0E0E0;
    border-radius: 4px;
    padding: 6px;
    color: #E0E0E0;
}

/* 复选框和单选框 */
QCheckBox, QRadioButton {
    spacing: 10px;
    color: #E0E0E0;
    font-weight: 500;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 20px;
    height: 20px;
    border-radius: 3px;
    border: 2px solid #8B7355;
    background-color: rgba(26, 26, 26, 0.8);
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: #2ECC71;
    background-color: rgba(46, 204, 113, 0.1);
}

QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background-color: #4A5F4A;
    border-color: #2ECC71;
    image: url(:/assets/icons/modern/check-tactical.png);
}

QRadioButton::indicator {
    border-radius: 10px;
}

QRadioButton::indicator:checked {
    image: url(:/assets/icons/modern/radio-tactical.png);
}

/* 滑块 - 雷达扫描风格 */
QSlider::groove:horizontal {
    border: 1px solid #8B7355;
    height: 10px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #1A1A1A, stop:0.5 #2C2C2C, stop:1 #1A1A1A);
    border-radius: 5px;
}

QSlider::handle:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #2ECC71, stop:1 #27AE60);
    border: 2px solid #E0E0E0;
    width: 22px;
    margin: -8px 0;
    border-radius: 11px;
    box-shadow: 0 0 8px rgba(46, 204, 113, 0.6);
}

QSlider::handle:horizontal:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #3498DB, stop:1 #2980B9);
    box-shadow: 0 0 12px rgba(52, 152, 219, 0.8);
}

/* 进度条 - HUD风格 */
QProgressBar {
    border: 2px solid #8B7355;
    border-radius: 6px;
    text-align: center;
    font-weight: 600;
    font-family: "Consolas", monospace;
    background-color: rgba(26, 26, 26, 0.8);
    color: #E0E0E0;
    height: 24px;
}

QProgressBar::chunk {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #2ECC71, stop:0.5 #3498DB, stop:1 #2ECC71);
    border-radius: 4px;
    animation: progress-glow 2s ease-in-out infinite alternate;
}

/* 表格 - 数据可视化风格 */
QTableWidget, QTableView {
    gridline-color: #8B7355;
    background-color: rgba(26, 26, 26, 0.9);
    alternate-background-color: rgba(44, 44, 44, 0.9);
    border: 2px solid #8B7355;
    border-radius: 6px;
    selection-background-color: rgba(74, 95, 74, 0.7);
}

QTableWidget::item, QTableView::item {
    padding: 10px;
    border-bottom: 1px solid rgba(139, 115, 85, 0.3);
    color: #E0E0E0;
    font-family: "Consolas", monospace;
}

QTableWidget::item:selected, QTableView::item:selected {
    background-color: rgba(74, 95, 74, 0.8);
    color: #FFFFFF;
    border: 1px solid #2ECC71;
}

QHeaderView::section {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #4A5F4A, stop:1 #3D4A3D);
    padding: 10px 14px;
    border: none;
    border-right: 1px solid #8B7355;
    border-bottom: 2px solid #C3B091;
    font-weight: 700;
    font-family: "Consolas", monospace;
    color: #E0E0E0;
    text-transform: uppercase;
    letter-spacing: 1px;
}

QHeaderView::section:first {
    border-top-left-radius: 6px;
}

QHeaderView::section:last {
    border-right: none;
    border-top-right-radius: 6px;
}

/* 分组框 - 战术设备风格 */
QGroupBox {
    font-weight: 700;
    border: 3px solid #8B7355;
    border-radius: 8px;
    margin-top: 12px;
    padding-top: 20px;
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(26, 26, 26, 0.8), stop:1 rgba(44, 44, 44, 0.8));
    color: #E0E0E0;
    font-family: "Consolas", monospace;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 12px;
    padding: 0 12px 0 12px;
    background: #4A5F4A;
    border: 2px solid #C3B091;
    border-radius: 4px;
    color: #E0E0E0;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* 选项卡 - 控制面板风格 */
QTabWidget::pane {
    border: 2px solid #8B7355;
    border-radius: 6px;
    background-color: rgba(26, 26, 26, 0.9);
}

QTabBar::tab {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #3D4A3D, stop:1 #2A352A);
    border: 2px solid #8B7355;
    padding: 12px 18px;
    margin-right: 2px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    color: #C3B091;
    font-weight: 600;
    font-family: "Consolas", monospace;
    text-transform: uppercase;
    letter-spacing: 1px;
}

QTabBar::tab:selected {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #4A5F4A, stop:1 #3D4A3D);
    border-bottom: 3px solid #2ECC71;
    color: #E0E0E0;
    border-bottom-color: #1A1A1A;
}

QTabBar::tab:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #5A6F5A, stop:1 #4A5F4A);
    color: #E0E0E0;
}

/* 菜单 - 指挥界面风格 */
QMenuBar {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #2C2C2C, stop:1 #1A1A1A);
    border-bottom: 2px solid #8B7355;
}

QMenuBar::item {
    padding: 12px 18px;
    background-color: transparent;
    color: #E0E0E0;
    font-weight: 600;
    font-family: "Consolas", monospace;
    text-transform: uppercase;
}

QMenuBar::item:selected {
    background-color: #4A5F4A;
    color: #FFFFFF;
    border: 1px solid #2ECC71;
}

QMenu {
    background-color: rgba(26, 26, 26, 0.95);
    border: 2px solid #8B7355;
    border-radius: 6px;
    padding: 6px;
    color: #E0E0E0;
}

QMenu::item {
    padding: 10px 18px;
    border-radius: 4px;
    font-family: "Consolas", monospace;
}

QMenu::item:selected {
    background-color: #4A5F4A;
    color: #FFFFFF;
    border: 1px solid #2ECC71;
}

QMenu::separator {
    height: 2px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #8B7355, stop:0.5 #C3B091, stop:1 #8B7355);
    margin: 6px 12px;
}

/* 工具栏 */
QToolBar {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #2C2C2C, stop:1 #1A1A1A);
    border: none;
    border-bottom: 1px solid #8B7355;
    spacing: 6px;
    padding: 6px;
}

QToolBar::handle {
    background-color: #8B7355;
    width: 4px;
    border-radius: 2px;
}

/* 状态栏 */
QStatusBar {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #2C2C2C, stop:1 #1A1A1A);
    border-top: 2px solid #8B7355;
    color: #C3B091;
    font-family: "Consolas", monospace;
    font-weight: 600;
}

/* 滚动条 */
QScrollBar:vertical {
    background-color: rgba(26, 26, 26, 0.8);
    width: 14px;
    border-radius: 7px;
    border: 1px solid #8B7355;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #4A5F4A, stop:1 #3D4A3D);
    border-radius: 7px;
    min-height: 25px;
    border: 1px solid #C3B091;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #5A6F5A, stop:1 #4A5F4A);
    border: 1px solid #2ECC71;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: rgba(26, 26, 26, 0.8);
    height: 14px;
    border-radius: 7px;
    border: 1px solid #8B7355;
}

QScrollBar::handle:horizontal {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #4A5F4A, stop:1 #3D4A3D);
    border-radius: 7px;
    min-width: 25px;
    border: 1px solid #C3B091;
}

QScrollBar::handle:horizontal:hover {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #5A6F5A, stop:1 #4A5F4A);
    border: 1px solid #2ECC71;
}

/* 工具提示 - HUD显示风格 */
QToolTip {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(74, 95, 74, 0.9), stop:1 rgba(61, 74, 61, 0.9));
    color: #E0E0E0;
    border: 2px solid #2ECC71;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 12px;
    font-family: "Consolas", monospace;
    font-weight: 600;
    box-shadow: 0 0 8px rgba(46, 204, 113, 0.6);
}

/* 消息框 */
QMessageBox {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(26, 26, 26, 0.95), stop:1 rgba(44, 44, 44, 0.95));
    border: 3px solid #8B7355;
    border-radius: 8px;
    color: #E0E0E0;
}

QMessageBox QPushButton {
    min-width: 90px;
    font-weight: 600;
}

/* 对话框 */
QDialog {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(26, 26, 26, 0.95), stop:1 rgba(44, 44, 44, 0.95));
    border: 3px solid #8B7355;
    border-radius: 8px;
    color: #E0E0E0;
}

/* 分割器 */
QSplitter::handle {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #8B7355, stop:1 #C3B091);
}

QSplitter::handle:horizontal {
    width: 3px;
}

QSplitter::handle:vertical {
    height: 3px;
}

/* 树形控件 */
QTreeWidget, QTreeView {
    background-color: rgba(26, 26, 26, 0.9);
    border: 2px solid #8B7355;
    border-radius: 6px;
    selection-background-color: rgba(74, 95, 74, 0.7);
    color: #E0E0E0;
}

QTreeWidget::item, QTreeView::item {
    padding: 6px;
    border-bottom: 1px solid rgba(139, 115, 85, 0.3);
}

QTreeWidget::item:selected, QTreeView::item:selected {
    background-color: rgba(74, 95, 74, 0.8);
    color: #FFFFFF;
    border: 1px solid #2ECC71;
}

/* 列表控件 */
QListWidget {
    background-color: rgba(26, 26, 26, 0.9);
    border: 2px solid #8B7355;
    border-radius: 6px;
    selection-background-color: rgba(74, 95, 74, 0.7);
    color: #E0E0E0;
}

QListWidget::item {
    padding: 10px 14px;
    border-bottom: 1px solid rgba(139, 115, 85, 0.3);
}

QListWidget::item:selected {
    background-color: rgba(74, 95, 74, 0.8);
    color: #FFFFFF;
    border: 1px solid #2ECC71;
}

/* 日历控件 */
QCalendarWidget {
    background: rgba(26, 26, 26, 0.95);
    border: 2px solid #8B7355;
    border-radius: 6px;
    color: #E0E0E0;
}

QCalendarWidget QToolButton {
    background: #4A5F4A;
    border: 1px solid #8B7355;
    color: #E0E0E0;
    font-weight: 600;
}

QCalendarWidget QToolButton:hover {
    background: #5A6F5A;
    border: 1px solid #2ECC71;
}

/* 日期时间编辑器 */
QDateTimeEdit {
    border: 2px solid #8B7355;
    border-radius: 4px;
    padding: 10px 14px;
    background: rgba(26, 26, 26, 0.9);
    color: #E0E0E0;
    font-family: "Consolas", monospace;
}

QDateTimeEdit:focus {
    border-color: #2ECC71;
}

/* 数值输入框 */
QSpinBox, QDoubleSpinBox {
    border: 2px solid #8B7355;
    border-radius: 4px;
    padding: 10px 14px;
    background: rgba(26, 26, 26, 0.9);
    color: #E0E0E0;
    font-family: "Consolas", monospace;
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border-color: #2ECC71;
}

QSpinBox::up-button, QDoubleSpinBox::up-button,
QSpinBox::down-button, QDoubleSpinBox::down-button {
    border: none;
    background-color: #4A5F4A;
    width: 18px;
    border: 1px solid #8B7355;
}

QSpinBox::up-button:hover, QDoubleSpinBox::up-button:hover,
QSpinBox::down-button:hover, QDoubleSpinBox::down-button:hover {
    background-color: #5A6F5A;
    border: 1px solid #2ECC71;
}

/* 特殊HUD组件样式 */
QWidget[class="radar-display"] {
    background: radial-gradient(circle,
                rgba(46, 204, 113, 0.1) 0%,
                rgba(26, 26, 26, 0.8) 50%,
                rgba(26, 26, 26, 0.95) 100%);
    border: 2px solid #2ECC71;
    border-radius: 50%;
    box-shadow: inset 0 0 20px rgba(46, 204, 113, 0.3),
                0 0 15px rgba(46, 204, 113, 0.2);
}

QWidget[class="status-panel"] {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(74, 95, 74, 0.2), stop:1 rgba(26, 26, 26, 0.8));
    border: 2px solid #8B7355;
    border-radius: 8px;
    padding: 12px;
}

/* 雷达扫描动画效果 */
@keyframes radar-sweep {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

@keyframes progress-glow {
    0% { box-shadow: 0 0 5px rgba(46, 204, 113, 0.5); }
    100% { box-shadow: 0 0 15px rgba(46, 204, 113, 0.8); }
}

@keyframes hud-blink {
    0% { opacity: 1; }
    50% { opacity: 0.6; }
    100% { opacity: 1; }
}